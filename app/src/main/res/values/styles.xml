<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="images_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">7</item>
    </style>


    <style name="images_titles_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/acme</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#0c255e</item>
        <item name="android:textStyle">bold</item>

        <item name="android:textAlignment">center</item>
    </style>

    <style name="credentials_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="answers_image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_weight">25</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/default_button_color</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="leaderboard_top_scores_textview_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_weight">75</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/coustard</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>