<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#bdb5a0"
    android:orientation="vertical"
    tools:context=".ChooseSubjectActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="100"
            >

            <TextView
                android:id="@+id/chooseSubjectTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:paddingBottom="60dp"
                android:text="@string/choose_subject_title"
                android:textColor="#660322"
                android:textAlignment="center"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/capitalsTitleTextView"
                style="@style/images_titles_style"
                android:text="@string/capitals"
                 />

            <ImageView
                android:id="@+id/capitals_image"
                style="@style/images_style"
                app:srcCompat="@drawable/earth" />

            <TextView
                android:id="@+id/astronomyTitleTextView"
                style="@style/images_titles_style"
                android:text="@string/astronomy" />

            <ImageView
                android:id="@+id/astronomy_image"
                style="@style/images_style"
                app:srcCompat="@drawable/astronomy" />

            <TextView
                android:id="@+id/historyTitleTextView"
                style="@style/images_titles_style"
                android:text="@string/history" />

            <ImageView
                android:id="@+id/history_image"
                style="@style/images_style"

                app:srcCompat="@drawable/history" />

            <TextView
                android:id="@+id/generalKnowledgeTitleTextView"
                style="@style/images_titles_style"

                android:text="@string/generalKnowledge" />

            <ImageView
                android:id="@+id/generalKnowledge_image"
                style="@style/images_style"

                app:srcCompat="@drawable/general_knowledge" />

            <TextView
                android:id="@+id/harryPotterTitleTextView"
                style="@style/images_titles_style"

                android:text="@string/harryPotter" />

            <ImageView
                android:id="@+id/harryPotter_image"
                style="@style/images_style"

                app:srcCompat="@drawable/harry_potter" />

            <TextView
                android:id="@+id/worldCupTitleTextView"
                style="@style/images_titles_style"

                android:text="@string/world_cup_title" />

            <ImageView
                android:id="@+id/worldCup_image"
                style="@style/images_style"

                app:srcCompat="@drawable/worldcup" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>